{
  "name": "verifiedinc-chat-api",
  "version": "0.1.0",
  "description": "Minimal backend API for chat system (Nest scaffold)",
  "main": "dist/main.js",
  "engines": {
    "node": "22"
  },
  "scripts": {
    "build": "tsc -p .",
    "start": "node dist/main.js",
    "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "start:dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "lint": "eslint \"src/**/*.ts\" || true",
    "test": "jest",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:reset": "prisma db push --force-reset && prisma db seed",
    "prisma:studio": "prisma studio",
    "docker:up": "DOCKER_BUILDKIT=1 docker compose up -d --build",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:rebuild": "docker compose down && DOCKER_BUILDKIT=1 docker compose up -d --build",
    "docker:seed": "docker compose restart api"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.0",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/swagger": "^11.2.1",
    "@nestjs/throttler": "^6.4.0",
    "@prisma/client": "^6.18.0",
    "bcrypt": "^6.0.0",
    "cache-manager": "^7.2.4",
    "cache-manager-redis-yet": "^5.1.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.4.2",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.0",
    "eslint": "^8.44.0",
    "jest": "^29.5.0",
    "prisma": "^6.18.0",
    "supertest": "^7.1.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.4"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
