# Local environment example
# Copy this file to .env and fill real secrets for local development.

# Postgres connection used by Prisma and the app
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL=postgresql://postgres:password@localhost:5433/chat_db

# Server
PORT=3000

# Prisma
PRISMA_LOG_LEVEL=info

# JWT Secrets
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production

# Admin API Key for privileged endpoints (e.g., GET /v1/users)
# Generate a secure random key: openssl rand -base64 32
ADMIN_API_KEY=your-admin-api-key-change-in-production
